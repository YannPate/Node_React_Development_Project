# Configuration de l'éditeur, voir https://editorconfig.org pour plus de détails
root = true

# Paramètres généraux pour tous les types de fichiers
[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Pour les fichiers TypeScript, utiliser des guillemets simples
[*.ts]
quote_type = single
ij_typescript_use_double_quotes = false

# Paramètres pour les fichiers Markdown
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Ajout d'une section personnalisée pour les fichiers CSS
[*.css]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
